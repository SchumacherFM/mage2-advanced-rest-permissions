<?xml version="1.0"?>
<!--File name of this file must match the file which we would like to extend-->
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="../../../../../../../lib/internal/Magento/Framework/View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="permission.role.grid.columnSet">
            <block class="Magento\Backend\Block\Widget\Grid\Column" as="user_type">
                <arguments>
                    <argument name="header" xsi:type="string" translate="true">User Type</argument>
                    <argument name="index" xsi:type="string">user_type</argument>
                    <argument name="type" xsi:type="string">options</argument>
                    <argument name="width" xsi:type="string">100px</argument>
                    <argument name="options" xsi:type="options"
                              model="SchumacherFM\AdvancedRESTPerms\Model\Source\UserTypes"/>
                </arguments>
            </block>
        </referenceBlock>
    </body>
</page>
